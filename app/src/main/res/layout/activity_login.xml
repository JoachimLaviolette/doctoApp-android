<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/login_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/roboto"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="@string/login_caption"
            android:textAlignment="center"
            android:textStyle="normal|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">

            <EditText
                android:id="@+id/login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="@string/login_username_placeholder"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="@string/login_pwd_placeholder"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_stay_logged"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:text="@string/login_stay_logged" />

                <TextView
                    android:id="@+id/login_forgot_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:text="@string/login_forgot_pwd"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/login_forgot_pwd"
                    android:textColorHighlight="@color/login_forgot_pwd"
                    android:textColorHint="@color/login_forgot_pwd"
                    android:textColorLink="@color/login_forgot_pwd"
                    android:textStyle="normal" />

            </LinearLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/login_btn_background"
                android:fontFamily="@font/roboto"
                android:text="@string/login_btn"
                android:textColor="@color/login_btn_text"
                android:textColorHighlight="@color/login_btn_text"
                android:textColorHint="@color/login_btn_text"
                android:textColorLink="@color/login_btn_text"
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@color/login_signup_background"
            android:orientation="vertical"
            android:paddingTop="10sp"
            android:paddingBottom="10sp">

            <TextView
                android:id="@+id/login_signup_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:padding="3sp"
                android:text="@string/login_signup_caption"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/login_signup_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3sp"
                android:text="@string/login_signup_link"
                android:textAlignment="center"
                android:textColor="@color/login_signup_link"
                android:textColorHighlight="@color/login_signup_link"
                android:textColorHint="@color/login_signup_link"
                android:textColorLink="@color/login_signup_link"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:fontFamily="@font/roboto" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>