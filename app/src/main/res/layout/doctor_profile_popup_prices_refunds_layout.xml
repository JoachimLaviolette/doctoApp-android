<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/doctor_profile_popup_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/doctor_profile_popup_external_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".8"
        android:background="@color/doctor_profile_popup_external_background">
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/doctor_profile_popup_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="15sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/doctor_profile_popup_title_background"
            android:orientation="horizontal"
            android:padding="10sp">

            <TextView
                android:id="@+id/doctor_profile_popup_title"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"
                android:textColor="@color/doctor_profile_popup_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/doctor_profile_popup_title"/>

            <TextView
                android:id="@+id/doctor_profile_popup_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:layout_marginEnd="10sp"
                android:textAlignment="viewEnd"
                android:textColor="@color/doctor_profile_popup_close"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="@string/doctor_profile_popup_close" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/doctor_profile_popup_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/doctor_profile_popup_background"
            android:padding="20sp">

            <LinearLayout
                android:id="@+id/doctor_profile_popup_section_is_under_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp">

                <TextView
                    android:id="@+id/doctor_profile_popup_is_under_agreement_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="100"
                    android:fadeScrollbars="true"
                    android:fontFamily="@font/roboto"
                    android:isScrollContainer="true"
                    android:lineSpacingExtra="6sp"
                    android:shadowColor="#000000"
                    android:text="@string/doctor_profile_popup_is_under_agreement"
                    android:textColor="@color/doctor_profile_popup_section_title"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"/>

                <TextView
                    android:id="@+id/doctor_profile_popup_is_under_agreement_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="100"
                    android:fadeScrollbars="true"
                    android:fontFamily="@font/roboto"
                    android:isScrollContainer="true"
                    android:lineSpacingExtra="6sp"
                    android:shadowColor="#000000"
                    android:text="@string/doctor_profile_popup_content"
                    android:textColor="@color/doctor_profile_popup_section_content"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/doctor_profile_section_is_third_party_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp">>

                <TextView
                    android:id="@+id/doctor_profile_popup_is_third_party_payment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="100"
                    android:fadeScrollbars="true"
                    android:fontFamily="@font/roboto"
                    android:isScrollContainer="true"
                    android:lineSpacingExtra="6sp"
                    android:shadowColor="#000000"
                    android:text="@string/doctor_profile_popup_is_third_party_payment"
                    android:textColor="@color/doctor_profile_popup_section_title"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"/>

                <TextView
                    android:id="@+id/doctor_profile_popup_is_third_party_payment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="100"
                    android:fadeScrollbars="true"
                    android:fontFamily="@font/roboto"
                    android:isScrollContainer="true"
                    android:lineSpacingExtra="6sp"
                    android:shadowColor="#000000"
                    android:text="@string/doctor_profile_popup_content"
                    android:textColor="@color/doctor_profile_popup_section_content"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/doctor_profile_section_is_health_insurance_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp">

                <TextView
                    android:id="@+id/doctor_profile_popup_is_health_insurance_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="100"
                    android:fadeScrollbars="true"
                    android:fontFamily="@font/roboto"
                    android:isScrollContainer="true"
                    android:lineSpacingExtra="6sp"
                    android:shadowColor="#000000"
                    android:text="@string/doctor_profile_popup_is_health_insurance_card"
                    android:textColor="@color/doctor_profile_popup_section_title"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"/>

                <TextView
                    android:id="@+id/doctor_profile_popup_is_health_insurance_card_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="100"
                    android:fadeScrollbars="true"
                    android:fontFamily="@font/roboto"
                    android:isScrollContainer="true"
                    android:lineSpacingExtra="6sp"
                    android:shadowColor="#000000"
                    android:text="@string/doctor_profile_popup_content"
                    android:textColor="@color/doctor_profile_popup_section_content"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>