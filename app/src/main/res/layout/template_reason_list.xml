<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/reasons_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/reason_list"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="@color/reason_list_divider"
        android:dividerHeight="0.7dp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="20sp"/>

    <RelativeLayout
        android:id="@+id/reason_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="20sp">

        <TextView
            android:id="@+id/reason_list_item_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="18sp"
            android:paddingBottom="18sp"
            android:paddingLeft="5sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/reason_list_item_reason"
            android:textSize="13sp"
            android:textStyle="normal"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>