<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.SignupProActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:background="@color/signup_pro_background"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/signup_pro_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:fontFamily="@font/roboto"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="@string/signup_pro_caption"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textColor="@color/signup_pro_caption" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10sp"
                android:paddingRight="10sp">

                <LinearLayout
                    android:id="@+id/signup_pro_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:background="@color/signup_pro_success_msg"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/signup_pro_msg_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:fontFamily="@font/roboto"
                        android:text="@string/signup_pro_success_msg_title"
                        android:textAlignment="center"
                        android:textColor="@color/signup_pro_success_msg_title"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/signup_pro_msg_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:fontFamily="@font/roboto"
                        android:text="@string/signup_pro_success_msg_content"
                        android:textAlignment="center"
                        android:textColor="@color/signup_pro_success_msg_content"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/signup_pro_doctor_profile_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/signup_pro_doctor_profile_section_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:padding="10dp"
                        android:text="@string/signup_pro_doctor_profile_section_label"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/signup_pro_section_label"/>

                    <RelativeLayout
                        android:id="@+id/signup_pro_doctor_picture_header_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="vertical">

                        <com.jgabrielfreitas.core.BlurImageView
                            android:id="@+id/signup_pro_doctor_header"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:adjustViewBounds="true"
                            android:padding="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/beach_2" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/signup_pro_doctor_picture"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_centerInParent="true"
                            android:padding="15dp"
                            android:src="@mipmap/ic_launcher"
                            app:civ_border_width="0dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/signup_pro_take_picture_from_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="54dp"
                            android:backgroundTint="@color/signup_pro_take_picture_from_camera"
                            android:drawableStart="@drawable/ic_take_picture"
                            android:drawablePadding="10sp"
                            android:fontFamily="@font/roboto"
                            android:paddingStart="26sp"
                            android:paddingEnd="26sp"
                            android:text="@string/signup_pro_take_picture_from_camera"
                            android:textColor="@color/signup_pro_take_picture_from_camera_text"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/signup_pro_select_picture_from_gallery"
                            android:layout_width="wrap_content"
                            android:layout_height="54dp"
                            android:backgroundTint="@color/signup_pro_select_picture_from_gallery"
                            android:drawableStart="@drawable/ic_add_image"
                            android:drawablePadding="10sp"
                            android:fontFamily="@font/roboto"
                            android:paddingStart="25sp"
                            android:paddingEnd="26sp"
                            android:text="@string/signup_pro_select_picture_from_gallery"
                            android:textColor="@color/signup_pro_select_picture_from_gallery_text"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/signup_pro_take_header_from_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="54dp"
                            android:backgroundTint="@color/signup_pro_take_header_from_camera"
                            android:drawableStart="@drawable/ic_take_picture"
                            android:drawablePadding="10sp"
                            android:fontFamily="@font/roboto"
                            android:paddingStart="26sp"
                            android:paddingEnd="26sp"
                            android:text="@string/signup_pro_take_header_from_camera"
                            android:textColor="@color/signup_pro_take_header_from_camera_text"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/signup_pro_select_header_from_gallery"
                            android:layout_width="wrap_content"
                            android:layout_height="54dp"
                            android:backgroundTint="@color/signup_pro_select_header_from_gallery"
                            android:drawableStart="@drawable/ic_add_image"
                            android:drawablePadding="10sp"
                            android:fontFamily="@font/roboto"
                            android:paddingStart="25sp"
                            android:paddingEnd="26sp"
                            android:text="@string/signup_pro_select_header_from_gallery"
                            android:textColor="@color/signup_pro_select_header_from_gallery_text"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <EditText
                            android:id="@+id/signup_pro_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2sp"
                            android:layout_marginBottom="2sp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/signup_pro_email_placeholder"
                            android:inputType="textEmailAddress"
                            android:padding="10sp"
                            android:textColor="@color/signup_pro_input_text"
                            android:textColorHint="@color/signup_pro_input_hint"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/signup_pro_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2sp"
                            android:layout_marginBottom="2sp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/signup_pro_firstname_placeholder"
                            android:inputType="textPersonName"
                            android:padding="10sp"
                            android:textColor="@color/signup_pro_input_text"
                            android:textColorHint="@color/signup_pro_input_hint"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/signup_pro_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2sp"
                            android:layout_marginBottom="2sp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/signup_pro_lastname_placeholder"
                            android:inputType="textPersonName"
                            android:padding="10sp"
                            android:textColor="@color/signup_pro_input_text"
                            android:textColorHint="@color/signup_pro_input_hint"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/signup_pro_confirm_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2sp"
                            android:layout_marginBottom="2sp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/signup_pro_confirm_pwd_placeholder"
                            android:inputType="textPassword"
                            android:padding="10sp"
                            android:textColor="@color/signup_pro_input_text"
                            android:textColorHint="@color/signup_pro_input_hint"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/signup_pro_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2sp"
                            android:layout_marginBottom="2sp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/signup_pro_pwd_placeholder"
                            android:inputType="textPassword"
                            android:padding="10sp"
                            android:textColor="@color/signup_pro_input_text"
                            android:textColorHint="@color/signup_pro_input_hint"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/signup_pro_speciality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2sp"
                            android:layout_marginBottom="2sp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/signup_pro_speciality_placeholder"
                            android:inputType="textPersonName"
                            android:padding="10sp"
                            android:textColor="@color/signup_pro_input_text"
                            android:textColorHint="@color/signup_pro_input_hint"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/signup_pro_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2sp"
                            android:layout_marginBottom="2sp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/signup_pro_description_placeholder"
                            android:inputType="textPersonName"
                            android:padding="10sp"
                            android:textColor="@color/signup_pro_input_text"
                            android:textColorHint="@color/signup_pro_input_hint"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/signup_pro_contact_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2sp"
                            android:layout_marginBottom="2sp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/signup_pro_contact_number_placeholder"
                            android:inputType="phone"
                            android:padding="10sp"
                            android:textColor="@color/signup_pro_input_text"
                            android:textColorHint="@color/signup_pro_input_hint"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="TextFields" />

                        <CheckBox
                            android:id="@+id/signup_pro_is_under_agreement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:text="@string/signup_pro_is_under_agreement"
                            android:textColor="@color/signup_pro_option" />

                        <CheckBox
                            android:id="@+id/signup_pro_is_health_insurance_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:text="@string/signup_pro_is_health_insurance_card"
                            android:textColor="@color/signup_pro_option" />

                        <CheckBox
                            android:id="@+id/signup_pro_is_third_party_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:text="@string/signup_pro_is_third_party_payment"
                            android:textColor="@color/signup_pro_option" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/signup_pro_doctor_address_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/signup_pro_doctor_address_section_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:padding="5sp"
                        android:text="@string/signup_pro_doctor_address_section_label"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/signup_pro_section_label" />

                    <EditText
                        android:id="@+id/signup_pro_street1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2sp"
                        android:layout_marginBottom="2sp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/signup_pro_street1_placeholder"
                        android:inputType="textPersonName"
                        android:padding="10sp"
                        android:textColor="@color/signup_pro_input_text"
                        android:textColorHint="@color/signup_pro_input_hint"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/signup_pro_street2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2sp"
                        android:layout_marginBottom="2sp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/signup_pro_street2_placeholder"
                        android:inputType="textPersonName"
                        android:padding="10sp"
                        android:textColor="@color/signup_pro_input_text"
                        android:textColorHint="@color/signup_pro_input_hint"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/signup_pro_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2sp"
                        android:layout_marginBottom="2sp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/signup_pro_city_placeholder"
                        android:inputType="textPersonName"
                        android:padding="10sp"
                        android:textColor="@color/signup_pro_input_text"
                        android:textColorHint="@color/signup_pro_input_hint"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/signup_pro_zip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2sp"
                        android:layout_marginBottom="2sp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/signup_pro_zip_placeholder"
                        android:inputType="numberSigned"
                        android:padding="10sp"
                        android:textColor="@color/signup_pro_input_text"
                        android:textColorHint="@color/signup_pro_input_hint"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/signup_pro_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2sp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/signup_pro_country_placeholder"
                        android:inputType="textPersonName"
                        android:padding="10sp"
                        android:textColor="@color/signup_pro_input_text"
                        android:textColorHint="@color/signup_pro_input_hint"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/signup_pro_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/signup_pro_btn_background"
                    android:fontFamily="@font/roboto"
                    android:text="@string/signup_pro_btn"
                    android:textColor="@color/signup_pro_btn_text"
                    android:textColorHighlight="@color/signup_pro_btn_text"
                    android:textColorHint="@color/signup_pro_btn_text"
                    android:textColorLink="@color/signup_pro_btn_text"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/signup_pro_login_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="5sp"
                android:background="@color/signup_pro_login_background"
                android:orientation="vertical"
                android:padding="20sp">

                <TextView
                    android:id="@+id/signup_pro_login_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingBottom="5sp"
                    android:text="@string/signup_pro_login_caption"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/signup_pro_caption" />

                <TextView
                    android:id="@+id/signup_pro_login_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingTop="5sp"
                    android:text="@string/signup_pro_login_link"
                    android:textAlignment="center"
                    android:textColor="@color/signup_pro_login_link"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/signup_pro_private_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="15sp"
                android:background="@color/signup_pro_login_background"
                android:orientation="vertical"
                android:padding="20sp">

                <TextView
                    android:id="@+id/signup_pro_private_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingBottom="5sp"
                    android:text="@string/signup_pro_private_account_caption"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/signup_pro_caption" />

                <TextView
                    android:id="@+id/signup_pro_private_account_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingTop="5sp"
                    android:text="@string/signup_pro_private_account_link"
                    android:textAlignment="center"
                    android:textColor="@color/signup_pro_private_account_link"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>