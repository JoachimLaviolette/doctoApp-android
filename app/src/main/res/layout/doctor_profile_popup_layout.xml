<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/doctor_profile_popup_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:shadowDx="3"
    android:shadowDy="3"
    android:shadowRadius="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20sp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginBottom="15sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/doctor_profile_popup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/doctor_profile_popup_title_background"
            android:fontFamily="@font/roboto"
            android:padding="10sp"
            android:textAlignment="center"
            android:textColor="@color/doctor_profile_popup_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/doctor_profile_popup_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/doctor_profile_popup_background"
            android:fontFamily="@font/roboto"
            android:isScrollContainer="true"
            android:padding="10sp"
            android:shadowColor="#000000"
            android:textColor="@color/doctor_profile_popup_content"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>