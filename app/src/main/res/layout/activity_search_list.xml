<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchListActivity">

    <ListView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/search_list_background"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="@color/search_list_divider"
        android:dividerHeight="0.7dp" />

    <RelativeLayout
        android:id="@+id/search_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/search_list_item_doctor_picture"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:padding="10sp" />

        <TextView
            android:id="@+id/search_list_item_doctor_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/search_list_item_doctor_picture"
            android:padding="10sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/search_list_item_doctor_fullname"
            android:textColorHighlight="@color/search_list_item_doctor_fullname"
            android:textColorHint="@color/search_list_item_doctor_fullname"
            android:textColorLink="@color/search_list_item_doctor_fullname"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/search_list_item_doctor_picture"
            android:padding="10sp">
            <TextView
                android:id="@+id/search_list_item_doctor_speciality"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:textColor="@color/search_list_item_doctor_speciality"
                android:textColorHighlight="@color/search_list_item_doctor_speciality"
                android:textColorHint="@color/search_list_item_doctor_speciality"
                android:textColorLink="@color/search_list_item_doctor_speciality"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/search_list_item_doctor_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:textColor="@color/search_list_item_doctor_address"
                android:textColorHighlight="@color/search_list_item_doctor_address"
                android:textColorHint="@color/search_list_item_doctor_address"
                android:textColorLink="@color/search_list_item_doctor_address"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/search_list_item_chevron"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/search_list_item_doctor_picture"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15sp"
            android:padding="10sp"
            android:fontFamily="@font/acme"
            android:gravity="end"
            android:textColor="@color/search_list_item_chevron"
            android:textColorHighlight="@color/search_list_item_chevron"
            android:textColorHint="@color/search_list_item_chevron"
            android:textColorLink="@color/search_list_item_chevron"
            android:textSize="40sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>