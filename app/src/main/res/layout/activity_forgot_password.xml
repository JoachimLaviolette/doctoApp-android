<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgot_password_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/forgot_password_background"
    tools:context=".Activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/forgot_password_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:fontFamily="@font/roboto"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="@string/forgot_password_caption"
            android:textColor="@color/forgot_password_caption"
            android:textAlignment="center"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">

            <LinearLayout
                android:id="@+id/forgot_password_password_updated_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@color/forgot_password_success_msg"
                android:orientation="vertical"
                android:padding="10sp"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/forgot_password_password_updated_msg_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/forgot_password_success_msg_title"
                    android:textAlignment="center"
                    android:textColor="@color/forgot_password_password_updated_msg_title"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/forgot_password_password_updated_msg_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/forgot_password_success_msg_content"
                    android:textAlignment="center"
                    android:textColor="@color/forgot_password_password_updated_msg_content"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/forgot_password_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:fontFamily="@font/roboto"
                android:hint="@string/forgot_password_email_placeholder"
                android:inputType="textEmailAddress"
                android:padding="10sp"
                android:textColor="@color/forgot_password_input_text"
                android:textColorHint="@color/forgot_password_input_hint"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/forgot_password_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:background="@android:drawable/editbox_background_normal"
                android:fontFamily="@font/roboto"
                android:hint="@string/forgot_password_pwd_placeholder"
                android:inputType="textPassword"
                android:padding="10sp"
                android:textColor="@color/forgot_password_input_text"
                android:textColorHint="@color/forgot_password_input_hint"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/forgot_password_confirm_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:background="@android:drawable/editbox_background_normal"
                android:fontFamily="@font/roboto"
                android:hint="@string/forgot_password_confirm_pwd_placeholder"
                android:inputType="textPassword"
                android:padding="10sp"
                android:textColor="@color/forgot_password_input_text"
                android:textColorHint="@color/forgot_password_input_hint"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/forgot_password_btn"
                android:layout_width="200dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/forgot_password_btn_background"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/forgot_password_btn"
                android:textColor="@color/forgot_password_btn_text"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>